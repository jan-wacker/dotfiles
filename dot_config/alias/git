function gcp(){
    git commit -m $1
    git push
}

function gcm(){
    local branch
    branch=$(git symbolic-ref --short HEAD 2>/dev/null)

    local commit

    if [[ "$branch" == "main" ]]; then
        read -q "REPLY?Current Git branch is 'main'. Continue? (y/n) "
        echo
        if [[ "$REPLY" =~ ^[Yy]$ ]]; then
            commit=1
        else
            echo "Aborted."
            return 1  # Branch is 'main', but user chose to abort
        fi
    else
        commit=1
    fi

    if [[ "$commit" == "1" ]]; then
        git commit -m $1
    fi
}

alias gs="git status"
alias ga="git add"
alias gaa="git add ."
alias gp="git push"

function gpsub(){
    git push
    git branch --set-upstream-to=origin/$(git branch --show-current) $(git branch --show-current)
}

function gsic(){
    git diff --stat origin/$(git branch --show-current);
    read -s -k '?Press any key to continue.'
    git diff origin/$(git branch --show-current);
}

alias gf="git fetch"
alias gp="git pull"

alias gco="git checkout"
alias gcom="git checkout main"

alias gsoc="git diff ORIG_HEAD HEAD"

alias gitroot='cd $(git rev-parse --show-toplevel)'
