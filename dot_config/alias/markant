alias cdinf="cd ~/dev/dmf/infrastructure"
alias cdwiki="cd ~/dev/dmf/wiki"
alias cddepl="cd ~/dev/dmf/datahub-deployment"

rdmfsec() {
    export TF_VAR_client_secret="`az keyvault secret show --name dmf-tf-service-principal-secret --vault kv-initmarkantdevops  --query value -o tsv`"
}

runallmetaminder () {
	echo "removing old jobs"
	kubectl get cronjobs.batch -n datahub -o json | jq -r '.items[] | select(.metadata.name | test("metaminder-")).metadata.name' | xargs -I{} kubectl delete jobs.batch -n datahub {}-manual
	echo "start new cronjobs"
	kubectl get cronjobs.batch -n datahub -o json | jq -r '.items[] | select(.metadata.name | test("metaminder-")).metadata.name' | xargs -I{} kubectl create job -n datahub --from=cronjob/{} {}-manual
}

docmateinit(){
    python3 -m venv venv
    source venv/bin/activate
    pip3 install -r "$(git rev-parse --show-toplevel)/requirements.txt"
}
